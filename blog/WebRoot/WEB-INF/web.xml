<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	 <jsp-config> 
		 <taglib>
	       <taglib-uri>/WEB-INF/pager.tld</taglib-uri> 
	       <taglib-location>/WEB-INF/pager.tld</taglib-location> 
		 </taglib>
	 </jsp-config> 
	<!--博客后台-->
	<servlet>
		<servlet-name>adminArticleServlet</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AdminArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminArticleServlet</servlet-name>
		<url-pattern>/adminArticle</url-pattern>
	</servlet-mapping>

	<!--图片上传-->
	<servlet>
		<servlet-name>imageUpload</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ImageUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>imageUpload</servlet-name>
		<url-pattern>/imageUpload</url-pattern>
	</servlet-mapping>

	<!--分类后台管理-->
	<servlet>
		<servlet-name>adminItem</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AdminItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminItem</servlet-name>
		<url-pattern>/adminItem</url-pattern>
	</servlet-mapping>
	
	<!--留言管理-->	
	<servlet>
		<servlet-name>adminNote</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AdminNoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminNote</servlet-name>
		<url-pattern>/adminNote</url-pattern>
	</servlet-mapping>
	
	<!--评论管理-->	
		<servlet>
		<servlet-name>adminReArticle</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AdminReArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminReArticle</servlet-name>
		<url-pattern>/adminReArticle</url-pattern>
	</servlet-mapping>
	
	<!-- 文章-->
	<servlet>
		<servlet-name>article</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>article</servlet-name>
		<url-pattern>/article</url-pattern>
	</servlet-mapping>
	
    <!--详情-->
	<servlet>
		<servlet-name>detail</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ArticleDetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>detail</servlet-name>
		<url-pattern>/detail</url-pattern>
	</servlet-mapping>
		
    <!--记录-->
	<servlet>
		<servlet-name>record</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ArticleRecordServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>record</servlet-name>
		<url-pattern>/record</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>about</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AboutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>about</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	
	<!--评论-->
	<servlet>
		<servlet-name>reArticle</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ReArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>reArticle</servlet-name>
		<url-pattern>/reArticle</url-pattern>
	</servlet-mapping>
	<!--留言-->
	<servlet>
		<servlet-name>note</servlet-name>
		<servlet-class>com.lhl.blog.servlet.NoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>note</servlet-name>
		<url-pattern>/note</url-pattern>
	</servlet-mapping>
	<!--分类-->
	<servlet>
		<servlet-name>item</servlet-name>
		<servlet-class>com.lhl.blog.servlet.ItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>item</servlet-name>
		<url-pattern>/item</url-pattern>
	</servlet-mapping>
	
	<!--管理员登录-->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.lhl.blog.servlet.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<!-- 字符编码过滤,统一成utf-8 -->
	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>
			com.lhl.blog.filter.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--权限过滤-->
	<filter>
		<filter-name>path</filter-name>
		<filter-class>com.lhl.blog.filter.DispatcherFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>path</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--设置session失效时间-->
  <welcome-file-list>
    <welcome-file>reload.jsp</welcome-file>
  </welcome-file-list>
  
  	<error-page>
	    <error-code>404</error-code>
	    <location>/error.jsp</location>
	</error-page>
	<error-page>
	    <error-code>500</error-code>
	    <location>/error.jsp</location>
	</error-page>
	
</web-app>
