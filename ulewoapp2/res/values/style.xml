<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 底部菜单 radio样式 -->
   <style name="main_footbar_radio">
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:button">@null</item>  
      	<item name="android:layout_weight">1.0</item>
      	<item name="android:gravity">center_horizontal</item>
      	<item name="android:textSize">@dimen/size_12</item>
    </style>
    <!-- 底部菜单分割线样式 -->
    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>
    
    <!-- 分割线 -->
    <style name="detail_cut_line">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2.0dip</item>
		<item name="android:layout_marginTop">8.0dip</item>
		<item name="android:layout_marginLeft">6.0dip</item>
		<item name="android:layout_marginRight">6.0dip</item>
		<item name="android:background">@drawable/line_bluegray</item>
	</style>
	
	<style name="progressstyle" parent="android:style/Widget.ProgressBar.Large">
		<item name="android:indeterminateDrawable">@drawable/myprogressbar</item>
	</style>
	
	<!-- 登录 -->
	
	<!--登录输入控件 -->
	<style name="login_text_con">
		<item name="android:background">@drawable/com_tencent_open_agent_navbar_btn_bg</item>
		<item name="android:layout_margin">10dp</item>
		<item name="android:padding">10dp</item>
	</style>
	<!-- 标题 -->
	<style name="login_text_title">
	    <item name="android:textColor">@color/black</item>
		<item name="android:layout_marginTop">3dp</item>
	</style>
	<!-- 输入框 -->
	<style name="login_textinput">
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:background">@null</item>
		<item name="android:textColor">@null</item>
	</style>
	
	<style name="login_submitbtn">
		<item name="android:background">@drawable/widget_login_btn</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16dp</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_margin">10dp</item>
	</style>
	<!-- 关于 -->
	<style name="about_item">
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>
</resources>