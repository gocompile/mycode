<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
  	android:focusable="true" 
	android:clickable="true"
    android:background="@drawable/widget_sub_recoment">
    <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView 
			android:id="@+id/recoment_sub_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/nameblue"
			android:textStyle="bold"
			android:textSize="12dp"/>
		<TextView 
			android:id="@+id/recoment_sub_rename"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/recoment_sub_name"
			android:text="@string/rename"
			android:textColor="@color/black"
			android:textSize="12dp"/>
		<TextView 
			android:id="@+id/recoment_sub_atname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/recoment_sub_rename"
			android:textColor="@color/nameblue"
			android:textStyle="bold"
			android:textSize="12dp"/>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/recoment_sub_atname"
			android:text="@string/maohao"
			android:textSize="12dp"
			android:textColor="@color/black"/>
    </RelativeLayout>
	 <LinearLayout 
	 	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
		<TextView 
			android:id="@+id/recoment_sub_con"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12dp"
			android:textColor="@color/black"/>
	</LinearLayout>
</LinearLayout>
